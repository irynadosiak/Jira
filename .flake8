[flake8]
exclude = 
    venv/,
    .venv/,
    __pycache__/,
    .git/,
    */migrations/,
    .pytest_cache/,
    .mypy_cache/,
    *.egg-info/,
    build/,
    dist/
max-line-length = 120
extend-ignore = E203,W503
per-file-ignores =
    # Django settings files
    */settings.py:E501
    # Test files can have longer lines
    test_*.py:E501
    **/tests.py:E501
